{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "address": "127.0.0.1",
      "localRoot": "${workspaceFolder}/deno",
      "name": "Debug deno",
      "port": 9229,
      "request": "attach",
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "cwd": "${workspaceRoot}/nest",
      "program": "src/main.ts",
      "env": {
        "NODE_ENV": "hmr"
      },
      "skipFiles": [
        "${workspaceFolder}/nest/node_modules/**",
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "release",
      "cwd": "${workspaceRoot}/nest",
      "program": "src/Mother.js",
      "env": {
        "NODE_ENV": "hmr"
      },
      "skipFiles": [
        "${workspaceFolder}/nest/node_modules/**",
        "${workspaceFolder}/nest/src/**",
        "<node_internals>/**"
      ]
    }
  ]
}