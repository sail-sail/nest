{
  "compilerOptions": {
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "declaration": false,
    "noImplicitAny": false,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [ "esnext", "dom" ],
    "types": [
      "@vue-macros/reactivity-transform/macros-global",
      "node",
      "vite/client",
      "@dcloudio/types",
      "@uni-helper/uni-app-types"
    ],
    "paths": {
      "@/*": [ "./src/*" ],
      "#/*": [ "./src/typings/*" ]
    }
  },
  "vueCompilerOptions": {
    "strictTemplates": false,
    "plugins": [
      "@uni-helper/uni-app-types/volar-plugin"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": [
    "src/tmui/**/*.ts",
    "src/tmui/**/*.vue"
  ]
}
