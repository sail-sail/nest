{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "watch": false,
    "target": "esnext",
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "__out__/**/*",
    "src/template/**/*"
  ],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}